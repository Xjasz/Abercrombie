<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <View
    android:id="@+id/statusBarBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:tag="@string/status_bar"
    android:visibility="gone" />

  <FrameLayout
    android:id="@+id/container_Actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarHeight"
    android:layout_below="@+id/statusBarBackground"
    android:background="@color/colorActionBar" />

  <FrameLayout
    android:id="@+id/container_MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/container_Actionbar" />

  <FrameLayout
    android:id="@+id/container_SubFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/container_Actionbar" />

</RelativeLayout>