<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_focused="true" android:state_pressed="true">
    <shape>
      <gradient android:angle="270" android:centerColor="@color/colorEditTextPressed" android:endColor="@color/colorEditTextPressed" android:startColor="@color/colorEditTextPressed" />
      <stroke android:width="@dimen/editTextStroke" android:color="@color/colorEditTextStroke" />
      <corners android:radius="@dimen/editTextRadius" />
    </shape>
  </item>

  <item android:state_focused="false" android:state_pressed="true">
    <shape>
      <gradient android:angle="270" android:centerColor="@color/colorEditTextPressed" android:endColor="@color/colorEditTextPressed" android:startColor="@color/colorEditTextPressed" />
      <stroke android:width="@dimen/editTextStroke" android:color="@color/colorEditTextStroke" />
      <corners android:radius="@dimen/editTextRadius" />
    </shape>
  </item>

  <item android:state_focused="true" android:state_pressed="false">
    <shape>
      <gradient android:angle="270" android:centerColor="@color/colorEditTextUnPressed" android:endColor="@color/colorEditTextUnPressed" android:startColor="@color/colorEditTextUnPressed" />
      <stroke android:width="@dimen/editTextStroke" android:color="@color/colorEditTextStroke" />
      <corners android:radius="@dimen/editTextRadius" />
    </shape>
  </item>

  <item android:state_focused="false" android:state_pressed="false">
    <shape>
      <gradient android:angle="270" android:centerColor="@color/colorEditTextUnPressed" android:endColor="@color/colorEditTextUnPressed" android:startColor="@color/colorEditTextUnPressed" />
      <stroke android:width="@dimen/editTextStroke" android:color="@color/colorEditTextStroke" />
      <corners android:radius="@dimen/editTextRadius" />
    </shape>
  </item>

</selector>